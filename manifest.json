{
    "manifest_version": 3,
    "name": "Filter Unread Outlook",
    "version": "0.0.1",
    "description": "By default, filter your Outlook mail by unread.",
    "permissions": [],
    "host_permissions": ["*://outlook.office.com/mail/*", "*://outlook.live.com/mail/*"],
    "content_scripts": [
        {
            "matches": ["*://outlook.office.com/mail/*", "*://outlook.live.com/mail/*"],
            "js": ["src/globals/clog.js", "src/globals/WaitForElement.js"]
        },
        {
            "matches": ["*://outlook.office.com/mail/*", "*://outlook.live.com/mail/*"],
            "js": ["src/content.js"]
        }
    ],
    "icons": {
        "128": "icon.png"
    }
}